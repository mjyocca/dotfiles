# NOTE: If want to auto login to tmux session
# command = /bin/zsh --login -c 'tmux new-session -A -D'
shell-integration = zsh
confirm-close-surface = false

# Font
font-size = 16
font-style-bold = true
font-style-bold-italic = false
font-family = "FiraCode Nerd Font"
window-title-font-family = "FiraCode Nerd Font"

# Theming
theme = GitHub Dark
background-opacity = 0.85
background-blur-radius = 25
window-padding-x = 16,16
window-padding-y = 16,16

# Quick Terminal
keybind = global:ctrl+grave_accent=toggle_quick_terminal

# Vim Style Navigation for ghostty splits
# keybind = cmd+shift+h=goto_split:left
# keybind = cmd+shift+j=goto_split:bottom
# keybind = cmd+shift+k=goto_split:top
# keybind = cmd+shift+l=goto_split:right

# NOTE: Testing out tmux style trigger sequence
# instead of: `ctrl+s>h`, trying: `shift+s`.
keybind = ctrl+s>h=goto_split:left
keybind = ctrl+s>j=goto_split:bottom
keybind = ctrl+s>k=goto_split:top
keybind = ctrl+s>l=goto_split:right

# Tmux style management for adding,removing,navigating splits
keybind = ctrl+s>shift+5=new_split:right
keybind = ctrl+s>shift+'=new_split:down
keybind = ctrl+s>c=new_tab
keybind = ctrl+s>n=next_tab
keybind = ctrl+s>p=previous_tab
keybind = ctrl+s>shift+7=close_surface

# Reload Config
keybind = cmd+shift+r=reload_config
